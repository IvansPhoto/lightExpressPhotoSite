<main>
	{{#each photos}}
		<a href='portraits/{{folder}}' class="allPhotoSets" loading="lazy">
			<picture>
				<source srcset="/images/{{folder}}/{{#each photos}}{{#if @first}}{{this}}{{/if}}{{/each}}_480.webp 480w,
								/images/{{folder}}/{{#each photos}}{{#if @first}}{{this}}{{/if}}{{/each}}_960.webp 960w,
								/images/{{folder}}/{{#each photos}}{{#if @first}}{{this}}{{/if}}{{/each}}_1920.webp 1920w" type="image/webp">
				<img src="/images/{{folder}}/{{#each photos}}{{#if @first}}{{this}}{{/if}}{{/each}}_1920.jpg" alt="{photo.name}" loading="lazy">
			</picture>
		</a>
	{{/each}}
</main>

<style>
	h1 {
		margin-top: 1rem;
		margin-bottom: 0.5rem;
		color: var(--colorRed);
		text-align: center;
	}

	a, picture {
		all: unset;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		border: 0;
	}

	main {
		line-height: 0;
		width: 100%;
		display: grid;
		grid: auto / repeat(3, 1fr);
		gap: 0;
		align-items: center;
		align-content: center;
		justify-items: center;
		justify-content: center;
	}

	img {
		border: 0;
		box-sizing: border-box;
		width: 100%;
	}

	@media (max-width: 764px) {
		h1 {
			margin-left: 3rem;
		}

		main {
			grid-template-columns: 1fr;
		}
	}
</style>
