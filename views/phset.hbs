<main id="bigImage">
	<h1>{{photoSet.name}}</h1>
	{{#each photoSet.photos}}
		<picture id="{{@index}}">
			<source srcset="/images/{{../photoSet.folder}}/{{this}}_480.webp 480w,
								/images/{{../photoSet.folder}}/{{this}}_960.webp 960w,
								/images/{{../photoSet.folder}}/{{this}}_1920.webp 1920w" type="image/webp" sizes="70w">
			<img src="/images/{{../photoSet.folder}}/{{this}}_1920.jpg" alt="{{../photoSet.name}}" loading="lazy">
		</picture>
	{{/each}}
	<p>{{photoSet.description}}</p>
</main>
<div id="gallery">
	{{#each photoSet.photos}}
		<picture>
			<source srcset="/images/{{../photoSet.folder}}/{{this}}_480.webp 480w,
								/images/{{../photoSet.folder}}/{{this}}_960.webp 960w,
								/images/{{../photoSet.folder}}/{{this}}_1920.webp 1920w" type="image/webp" sizes="(min-width: 700px) 20vw, 100w">
			<img src="/images/{{../photoSet.folder}}/{{this}}_1920.jpg" alt="{{../photoSet.name}}" loading="lazy" index="{{@index}}">
		</picture>
	{{/each}}
</div>

<style>
	#bigImage {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;

		position: sticky;
		top: 3vh;
		width: calc((100vw - 12rem) * 0.75);
		padding: 0 3rem;
	}

	#bigImage picture {
		display: none;
	}

	.shown {
		display: flex !important;
	}

	img {
		max-width: 100%;
		max-height: 85vh;
		box-sizing: border-box;
	}

	#gallery {
		display: flex;
		flex-direction: column;
		align-items: flex-end;
		width: calc((100vw - 12rem) * 0.25);
		line-height: 0;
	}

	@media screen and (max-width: 764px) {

		#bigImage {
			display: none;
		}

		img {
			width: 100%;
			max-height: 100vh;
		}

		#gallery {
			display: flex;
			flex-direction: column;
			width: 100%;
		}
	}
</style>
